# editorconfig.org
root = true

[*]

max_line_length = 120
indent_style = space
indent_size = 2
quote_type = single

end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.md]
trim_trailing_whitespace = false

[*.{scss,css}]
indent_size = 4

[*.{html,php}]
indent_size = 3
